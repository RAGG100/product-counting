{
    "version": 1,
    "formatters": {
        "basic": {
            "format": "{asctime} {module}-{levelname}: {message}",
            "datefmt": "%Y-%m-%d %H:%M:%S",
            "style": "{"
        }
    },
    "handlers": {
        "file": {
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter": "basic",
            "filename": "logger.log",
            "maxBytes": 1024
        },
        "console": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "basic"
        }

    },
    "loggers": {
        "base": {
            "level": "DEBUG",
            "handlers": ["file", "console"]
        }
    }
}